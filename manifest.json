{
  "manifest_version": 2,
  "name": "Read Selected Text Aloud",
  "version": "1.0",
  "description": "Reads the highlighted text using speech synthesis.",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Read Text Aloud"
  },
  "icons": {
    "48": "icons/icon.png"
  },
  "applications": {
    "gecko": {
      "id": "readtext@example.com",
      "strict_min_version": "57.0"
    }
  }
}
